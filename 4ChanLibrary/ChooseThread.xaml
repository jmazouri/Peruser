<Window x:Class="ChanLibrary.ChooseThread"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose a Thread" Height="110" Width="347"
        WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp">
    <StackPanel Orientation="Vertical" Margin="4,0,4,4" >
        <Label Content="Paste a thread URL"/>
        <TextBox Name="ThreadUrlBox"></TextBox>
        <Button Name="OkButton" Click="Button_Click" Width="34">OK</Button>
    </StackPanel>
</Window>
